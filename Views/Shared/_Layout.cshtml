
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/2.0.1/css/dataTables.bootstrap5.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <link href="~/Content/StyleSheet1.css" rel="stylesheet"/>
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.0.1/js/dataTables.bootstrap5.js"></script>
    <script src="https://cdn.datatables.net/colreorder/2.0.0/js/dataTables.colReorder.js"></script>
    <script src="https://cdn.datatables.net/colreorder/2.0.0/js/colReorder.bootstrap5.js"></script>

</head>
<body>

    <nav class="navbar navbar-expand-lg bg-light nav-tabs" style="margin-bottom:30px">
        <div class="container-fluid">
            <a class="navbar-brand" style="color:gold" href="@Url.Action("MainIndex", "Main")">
                <img src="@Url.Content("~/stokip-high-resolution-logo-transparent.png")" alt="" width="100" height="24">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div id="navbar" class="navbar-nav">
                    <a class="nav-link @(activeClass("Main"))" href="@Url.Action("MainIndex", "Main")"><i class="fas fa-home"></i> <b>Ana Sayfa</b></a>
                    <a class="nav-link @(activeClass("Urun"))" href="@Url.Action("UrunIndex", "Urun")"><i class="fas fa-box"></i> <b>Ürünler</b></a>
                    <a class="nav-link @(activeClass("Kategori"))" href="@Url.Action("KategoriIndex", "Kategori")"><i class="fas fa-tags"></i> <b>Kategoriler</b></a>
                    <a class="nav-link @(activeClass("Musteri"))" href="@Url.Action("MusteriIndex", "Musteri")"><i class="fas fa-users"></i> <b>Müşteriler</b></a>
                    <a class="nav-link @(activeClass("Satis"))" href="@Url.Action("SatisIndex", "Satis")"><i class="fas fa-money-bill-alt"></i> <b>Satışlar</b></a>
                    <a class="nav-link @(activeClass("Alis"))" href="@Url.Action("AlisIndex", "Alis")"><i class="fas fa-shopping-cart"></i> <b>Alışlar</b></a>
                </div>
            </div>
            <div class="dropdown justify-content-end userPanel">
                <button style="border-color:indigo !important;" class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="fas fa-user-edit"></i>
                </button>
                <ul style="right:0;" class="dropdown-menu rounded" aria-labelledby="dropdownMenuButton1">
                    <li><a style="text-decoration: none;" id="username" class="dropdown-item-text"></a></li> 
                    <li><hr class="dropdown-divider"></li>
                    <li><button class="dropdown-item btn btn-UpdateCredentials" data-bs-toggle="modal" data-bs-target="#changePasswordModal">Hesap Bilgileri</button></li>
                    <li><a class="dropdown-item btn">Çıkış Yap</a></li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="modal fade" id="changePasswordModal" tabindex="-1" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="changePasswordModalLabel">Bilgilerimi Değiştir</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Kapat"></button>
                </div>
                <div class="modal-body">
                    <form id="changePasswordForm">
                        <div class="input-group mb-3 form-group">
                            <span class="input-group-text"><label for="changePasswordUsername" class="form-label">Kullanıcı Adı:</label></span>
                            <input type="text" class="form-control" id="changePasswordUsername" name="username" readonly>
                        </div>
                        <div class="input-group mb-3 form-group">
                            <span class="input-group-text"><label for="changePasswordUsername" class="form-label">Yeni Kullanıcı Adı:</label></span>
                            <input placeholder="Değiştirmek istemiyorsanız boş bırakın." type="text" class="form-control" id="changePasswordNewUsername" name="username">
                        </div>
                        <div class="input-group mb-3 form-group">
                            <span class="input-group-text"><label for="changePasswordOld" class="form-label">Mevcut Şifre:</label></span>
                            <input type="password" class="form-control" id="changePasswordOld" name="oldPassword">
                        </div>
                        <div class="input-group mb-3 form-group">
                            <span class="input-group-text"><label for="changePasswordNew" class="form-label">Yeni Şifre:</label></span>
                            <input type="password" class="form-control" id="changePasswordNew" name="newPassword">
                        </div>
                        <div class="input-group mb-3 form-group">
                            <span class="input-group-text"><label for="changePasswordConfirm" class="form-label">Yeni Şifre Tekrar:</label></span>
                            <input type="password" class="form-control" id="changePasswordConfirm" name="confirmPassword">
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Kapat</button>
                    <button type="button" id="changePasswordBtn" class="btn btn-success">Kaydet</button>
                </div>
            </div>
        </div>
    </div>


    @RenderBody()
</body>
</html>

@{
    string activeClass(string controller)
    {
        var active = string.Equals(ViewContext.RouteData.Values["Controller"].ToString(), controller, StringComparison.OrdinalIgnoreCase) ? "active" : "";
        return active;
    }
}

<script>

    $(document).ready(function() {
        $('.dropdown-toggle').click(function() {
            var dropdownMenu = $(this).next('.dropdown-menu');
            dropdownMenu.toggleClass('show');
            dropdownMenu.parent().toggleClass('show');
        });

        $(document).on('click', function(e) {
            if (!$(e.target).closest('.dropdown-toggle').length) {
                $('.dropdown-menu').removeClass('show');
                $('.dropdown-toggle').parent().removeClass('show');
            }
        });

        $.ajax({
            url: '@Url.Action("GetActiveUser", "User")',
            type: 'GET',
            dataType: 'json',
            success: function (response) {
                var activeUser = response.username;
                $("#username").html(activeUser);
                $("#changePasswordUsername").val(activeUser);
            }
        });

        $(".btn-UpdateCredentials").click(function () {
            $('#changePasswordModal').modal('show');
        })

        $('#changePasswordBtn').click(function () {
            var username = $('#changePasswordUsername').val();
            var newUsername = $('#changePasswordNewUsername').val();
            var oldPassword = $('#changePasswordOld').val();
            var newPassword = $('#changePasswordNew').val();
            var confirmPassword = $('#changePasswordConfirm').val();

            if (newPassword !== confirmPassword) {
                alert("Yeni şifreler eşleşmiyor!");
                return;
            }

            $.ajax({
                url: '@Url.Action("UpdateCredentials", "User")',
                type: 'POST',
                dataType: 'json',
                data: {
                    username: username,
                    newUsername: newUsername,
                    oldPassword: oldPassword,
                    newPassword: newPassword
                },
                success: function (response) {
                    if (response.success) {
                        alert("Bilgileriniz başarıyla değiştirildi!");
                        window.location.reload();
                    } else {
                        alert(response.message);
                    }
                },
                error: function () {
                    alert("Sunucu hatası! Bilgileriniz değiştirilemedi.");
                }
            });
        });

        $('#changePasswordModal').keypress(function (event) {
            if (event.key === "Enter") {
                event.preventDefault();
                $("#changePasswordBtn").click();
            }
        })

    });

</script>